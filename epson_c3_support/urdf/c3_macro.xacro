      <collision>
        <origin xyz="0 -0.35 -0.57" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://epson_c3_support/meshes/c3/collision/link_5.stl" scale="0.001 0.001 0.001" />
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_6">
      <visual>
        <origin xyz="-0.57 0 -0.41" rpy="1.570796326 0 1.570796326"/>
        <geometry>
          <mesh filename="package://epson_c3_support/meshes/c3/visual/link_6.stl" scale="0.001 0.001 0.001" />
        </geometry>
        <material name="">
          <color rgba="1 1 1 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="-0.57 0 -0.41" rpy="1.570796326 0 1.570796326"/>
